[global]
    monitor = 0
    follow = mouse
    geometry = "300x10-10+15"
    indicate_hidden = yes
    shrink = no
    notification_height = 15
    separator_height = 1
    padding = 10
    horizontal_padding = 10
    frame_width = 2
    frame_color = "#44475a"
    separator_color = frame
    sort = yes
    idle_threshold = 120
    font = Ubuntu 10
    line_height = 0
    markup = full
    format = "<span><b>%s %p</b></span>\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    icon_position = left
    max_icon_size = 48
    icon_path = ~/.local/share/icons/Newaita/status/48/:~/.local/share/icons/Newaita/apps/64/:~/.local/share/icons/Newaita/devices/48/
    sticky_history = yes
    history_length = 20
    always_run_script = true
    startup_notification = false
    verbosity = mesg
    #corner_radius = 4.0
    force_xinerama = false
    mouse_left_click = do_action
    mouse_middle_click = close_all
    mouse_right_click = close_current
	transparency = 25
	dmenu = "/usr/bin/dmenu -nf '#F7F8F2' -nb '#282A36' -sb '#bd93f9' -sf '#F8F8F2' -p 'Notification:'"

[shortcuts]
    close =  ctrl+period
    history = ctrl+shift+period
    context = ctrl+alt+period


[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the '#' and following  would be interpreted as a comment.
    background="#282a36"
    foreground="#f8f8f2"
    timeout = 2


[urgency_normal]
    background="#282a36" #3a3a3a
    foreground="#f8f8f2"
    timeout = 3


[urgency_critical]
    background="#ff5555"
    foreground="#f8f8f2"
    timeout = 5

