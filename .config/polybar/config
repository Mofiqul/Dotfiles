[bar/fullbar]
monitor = 
include-file = ~/.config/polybar/fullbar

background = #bb282a36
foreground = #f8f8f2

modules-left = i3 separatordotted title separatordotted mpd 
modules-center = 
modules-right = filesystem memory cpu separatordotted system-usb-udev pulseaudio wlan bluetooth battery updates separatordotted date 

[module/memory]
type = internal/memory
internal = 1
format-prefix = 
format-prefix-foreground = "#50fa7b"
format = <label>
label = %mb_used%
format-prefix-padding = 1

[module/cpu]
type = internal/cpu
internal = 0.5
format-prefix = ﬙  
format-prefix-foreground = "#ff5555"
format = <label>%
label =  %percentage%
format-prefix-padding = 1

[module/filesystem]
type = internal/fs
mount-0 = /home
interval = 10
fixed-values = true
format-mounted-prefix = 
format-mounted-prefix-foreground = "#ff79c6"
format-mounted = <label-mounted>
format-unmounted-prefix = 
format-unmounted-prefix-foreground = "#ff79c6"
format-unmounted = <label-unmounted>
label-mounted = %free%
label-unmounted = %mountpoint%: not mounted

[module/system-usb-udev]
type = custom/script
exec = ~/.config/polybar/system-usb-udev.sh
tail = true
click-left = ~/.config/polybar/system-usb-udev.sh --mount &
click-right = ~/.config/polybar/system-usb-udev.sh --unmount &

[module/date]
type = internal/date
interval = 60
date = %a %d %b
time = %l:%M %p
label = %date% %time%
;label = %date% %time%
;label =  %time%
;format-prefix = 
;format-prefix-padding = 1
;format-prefix-foreground = "#8be9fd"
format-padding = 1
label-font = 2

[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
poll-interval = 2
format-discharging-prefix = 
;format-discharging-prefix-foreground = "#ffb86c"
format-discharging = <label-discharging>%
format-full-prefix = 
format-full = <label-full>% 
format-charging-prefix = 
;format-charging-prefix-foreground = "#50fa7b"
format-charging = <label-charging>% 
label-charging = %percentage%
label-discharging =  %percentage%
label-full =  Fully Charged
time-format = %H:%M

